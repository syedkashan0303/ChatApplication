<script>
    // ==========================
    // ✅ GLOBAL VARIABLES (Top)
    // ==========================
    let skipDays = 0;
    let isLoading = false;
    let allMessagesLoaded = false;
    let currentRoom = null;
    let fontSize = 18;

    // hidden inputs
    function getSenderEmail() { return $("#senderEmail").val(); }
    function getHiddenRoomName() { return $("#hiddenRoomName").val(); }
    function getHiddenRoomId() { return $("#hiddenRoomid").val(); }
    function getIsGroup() { return $("#isGroup").val(); }

    // ==========================
    // ✅ SIGNALR CONNECTION (Only One Instance)
    // ==========================
    var connectionChat = new signalR.HubConnectionBuilder()
        .withUrl("/hubs/basicchat") // ✅ MUST MATCH Program.cs
        .withAutomaticReconnect([0, 2000, 5000, 10000, 30000])
        .build();

    // ==========================
    // ✅ SIGNALR CONNECTION EVENTS
    // ==========================
    connectionChat.onreconnecting(error => {
        console.warn("SignalR Reconnecting:", error);
        // toastr.warning("Connection lost. Reconnecting...", "Chat");
    });

    connectionChat.onreconnected(async () => {
        console.log("SignalR Reconnected");

        // ✅ Rejoin current room after reconnect
        if (currentRoom) {
            try {
                await connectionChat.invoke("JoinRoom", currentRoom);
                console.log("Re-joined room:", currentRoom);
            } catch (err) {
                console.error("JoinRoom failed after reconnect:", err);
            }
        }

        // ✅ Refresh unread counts (NO re-registering events)
        try {
            await loadUnreadCounts();
        } catch (e) {
            console.error("Unread refresh failed:", e);
        }
    });

    connectionChat.onclose((error) => {
        console.error("SignalR Connection closed:", error);

        // retry forever
        setTimeout(async () => {
            try {
                await connectionChat.start();
                console.log("SignalR restarted after close");

                if (currentRoom) {
                    await connectionChat.invoke("JoinRoom", currentRoom);
                }

                await loadUnreadCounts();
            } catch (err) {
                console.error("Restart failed:", err);
            }
        }, 5000);
    });

    // ==========================
    // ✅ SERVER EVENT: RedirectToLogin
    // ==========================
    connectionChat.on("RedirectToLogin", () => {
        setTimeout(() => {
            window.location.href = "/Home/Index";
        }, 3000);
    });

    // ==========================
    // ✅ SIGNALR EVENTS (REGISTER ONCE ONLY)
    // ==========================

    // 🔹 Message Edited
    connectionChat.on("MessageEdited", function (messageId, newContent) {
        newContent = (newContent.replace(/\\n/g, "<br>"));
        const $msg = $("#message-" + messageId);

        if ($msg.length) {
            $msg.find(".message-text").html(newContent + " <i>(edited)</i>");
            $msg.find(".edit-btn").attr("data-content", newContent);
        }
    });

    // 🔹 Message Received (Group + Personal)
    connectionChat.on("MessageReceived", function (messageId, user, message, messageTime, senderId, receiver, isGroup) {

        var myUserEmail = getHiddenRoomId();
        const currentChatUserEmail = getHiddenRoomName();

        // ✅ For personal chat: only render if message belongs to current open chat
        if (isGroup == false) {
            const isRelevantToMe =
                (user === currentChatUserEmail && senderId === myUserEmail) ||
                (receiver === currentChatUserEmail && user === myUserEmail);

            if (!isRelevantToMe) {
                return;
            }
        }

        renderMessage(user, message, messageId, false, false, false, messageTime);
        moveChatToTop(isGroup ? receiver : senderId, isGroup);
    });

    // 🔹 Personal message sent event (your custom)
    connectionChat.on("SendMessageUser", function (messageId, user, message, messageTime, senderId, receiver, isGroup) {

        var myUserEmail = getHiddenRoomId();
        const currentChatUserEmail = getHiddenRoomName();

        if (isGroup == false) {
            const isRelevantToMe = (receiver === myUserEmail);
            if (!isRelevantToMe) return;
        }

        renderMessage(user, message, messageId, false, false, false, messageTime);
    });

    // 🔹 Message Deleted (Group)
    connectionChat.on("MessageDeleted", function (messageId) {
        markMessageDeletedUI(messageId);
    });

    // 🔹 Message Deleted (User)
    connectionChat.on("UserMessageDeleted", function (messageId) {
        markMessageDeletedUI(messageId);
    });

    // 🔹 Server Error
    connectionChat.on("Error", function (message) {
        console.error("SignalR Error from server:", message);
        alert(message);
    });

    // 🔹 Unread count update realtime
    connectionChat.on("ReceiveUnreadCount", function (roomId, roomName, count, isRoom) {
        console.log("ReceiveUnreadCount =>", { roomId, roomName, count, isRoom });

        const badge = document.getElementById(`unread-count-${roomId}`);
        if (badge) {
            badge.textContent = count > 0 ? count : '';
            badge.style.display = count > 0 ? 'inline-block' : 'none';
        }

        if (count > 0) {
            const isRoomLocal = $(`li.group-item[data-id='${roomId}']`).data("isroom");
            moveChatToTop(roomId, isRoomLocal);
            sortChatListByUnread();
        }
    });

    // ==========================
    // ✅ START CONNECTION (ONLY ONCE)
    // ==========================
    connectionChat.start()
        .then(async function () {
            console.log("✅ SignalR connected");

            // Load rooms first (so firstRoom exists)
            await loadRooms();

            // Load unread counts
            await loadUnreadCounts();

            // Auto join first room
            autoJoinFirstRoom();

        })
        .catch(function (err) {
            console.error("❌ SignalR connection failed:", err);
        });

    // ==========================
    // ✅ DOCUMENT READY
    // ==========================
    $(document).ready(function () {

        $('#chatMessage').css('direction', 'rtl');

        $('#alignRight').click(function () {
            $('#chatMessage').css('direction', 'rtl');
        });

        $('#alignLeft').click(function () {
            $('#chatMessage').css('direction', 'ltr');
        });

        // Default font size apply
        setTimeout(() => {
            customFontSize(18);
        }, 500);
    });

    // ==========================
    // ✅ INFINITE SCROLL LOAD OLD MESSAGES
    // ==========================
    $(".card-footer").on("scroll", function () {

        if ($(this).scrollTop() == 0 && !isLoading && !allMessagesLoaded && currentRoom) {
            skipDays += 1;

            var isroom = $("#isGroup").val();
            loadGroupMessages(currentRoom, skipDays, true, 0, isroom, $("#hiddenRoomid").val());
        }
    });

    // ==========================
    // ✅ COPY BUTTON
    // ==========================
    $(document).on("click", ".copy-btn", function () {
        var htmlContent = $(this).siblings(".message-text").html();
        var textToCopy = htmlContent.replace(/<br\s*\/?>/gi, "\n");
        textToCopy = textToCopy.replace(/<i>\(edited\)<\/i>/gi, "");

        var $btn = $(this);
        var $icon = $btn.find("i");

        if (navigator.clipboard && window.isSecureContext) {
            navigator.clipboard.writeText(textToCopy).then(() => {
                $icon.removeClass("fa-copy").addClass("fa-check");
                setTimeout(() => {
                    $icon.removeClass("fa-check").addClass("fa-copy");
                }, 1500);
            }).catch(err => {
                console.error("Clipboard error:", err);
                fallbackCopy(textToCopy);
            });
        } else {
            fallbackCopy(textToCopy);
        }

        function fallbackCopy(text) {
            let textArea = $("<textarea>");
            textArea.val(text).css({ position: "fixed", top: 0, left: 0, opacity: 0 });
            $("body").append(textArea);
            textArea[0].focus();
            textArea[0].select();

            try {
                let successful = document.execCommand('copy');
                if (successful) {
                    $icon.removeClass("fa-copy").addClass("fa-check");
                    setTimeout(() => {
                        $icon.removeClass("fa-check").addClass("fa-copy");
                    }, 1500);
                }
            } catch (err) {
                console.error("Fallback copy failed:", err);
            }
            textArea.remove();
        }
    });

    // ==========================
    // ✅ SEARCH GROUPS
    // ==========================
    function filterGroups() {
        var searchTerm = $('#searchBar').val().toLowerCase();
        var groupItems = $('#groupList .group-item');

        groupItems.each(function () {
            var groupName = $(this).text().toLowerCase();
            if (groupName.indexOf(searchTerm) === -1) {
                $(this).hide();
            } else {
                $(this).show();
            }
        });
    }

    // ==========================
    // ✅ LOAD ROOMS (AJAX)
    // ==========================
    function loadRooms() {
        return $.ajax({
            url: '/Home/GetRooms',
            type: 'GET',
            success: function (rooms) {
                var groupList = $("#groupList");
                groupList.empty();

                let hasGroupHeader = false;
                let hasUserHeader = false;

                $.each(rooms, function (index, room) {
                    let firstLetter = room.name.charAt(0).toUpperCase();

                    if (room.isRoom && !hasGroupHeader) {
                        groupList.append(`<li class="list-separator" style="background-color: #a80029;font-weight: bold;font-size: large;">Groups</li>`);
                        hasGroupHeader = true;
                    }

                    if (!room.isRoom && !hasUserHeader) {
                        groupList.append(`<li class="list-separator" style="background-color: #a80029;font-weight: bold;font-size: large;">Users</li>`);
                        hasUserHeader = true;
                    }

                    groupList.append(
                        `<li class="group-item" data-room="${room.name}" data-id="${room.safeId}" data-isroom="${room.isRoom}">
                            <div class="letter-avatar d-flex align-items-center justify-content-center me-2">
                                ${firstLetter}
                            </div>
                            <span>${room.name}</span>
                            <span id="unread-count-${room.safeId}" class="badge bg-danger ms-2" style="display: none;"></span>
                        </li>`
                    );
                });

                filterGroups();
            },
            error: function (err) {
                console.error("Failed to load rooms", err);
            }
        });
    }

    // ==========================
    // ✅ UNREAD COUNTS LOAD (SignalR Invoke)
    // ==========================
    async function loadUnreadCounts() {
        try {
            const data = await connectionChat.invoke("GetUnreadMessageCounts");

            if (Array.isArray(data)) {
                data.forEach(room => {
                    const badge = document.getElementById(`unread-count-${room.roomId}`);
                    if (badge) {
                        badge.textContent = room.count > 0 ? room.count : '';
                        badge.style.display = room.count > 0 ? 'inline-block' : 'none';
                    }
                });

                sortChatListByUnread();
            }
        } catch (err) {
            console.error("❌ Error loading unread counts:", err);
        }
    }

    // ==========================
    // ✅ AUTO JOIN FIRST ROOM
    // ==========================
    function autoJoinFirstRoom() {
        const firstRoom = $("#groupList .group-item").first().data("room");

        if (!firstRoom) {
            console.warn("⚠️ No room to join on load.");
            return;
        }

        connectionChat.invoke("JoinRoom", firstRoom).then(() => {
            currentRoom = firstRoom;
            $("#roomName").text(" - " + firstRoom);
            $("#hiddenRoomName").val(firstRoom);

            skipDays = 0;
            allMessagesLoaded = false;

            $("#messagesList").empty();
            loadGroupMessages(firstRoom, 0, true, 0, '', '');
        });
    }

    // ==========================
    // ✅ CLICK ROOM / USER CHAT
    // ==========================
    $(document).on("click", ".group-item", function () {

        var roomName = $(this).data("room");
        var roomId = $(this).data("id");
        var isroom = $(this).data("isroom");

        $(".group-item").removeClass("active");
        $(this).addClass("active");

        $('.chatsection').show();
        $('.arylogo').hide();

        // Leave previous room
        if (currentRoom) {
            connectionChat.invoke("LeaveRoom", currentRoom).catch(() => { });
        }

        connectionChat.invoke("JoinRoom", roomName).then(() => {

            currentRoom = roomName;
            $("#roomName").text(" - " + roomName);
            $("#hiddenRoomName").val(roomName);
            $("#hiddenRoomid").val(roomId);
            $("#isGroup").val(isroom);

            skipDays = 0;
            allMessagesLoaded = false;

            $("#messagesList").empty();
            $("#messagesList").append('<div id="chat-loader" class="d-flex justify-content-center align-items-center w-100" style="height: 100%;"><div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"><span class="visually-hidden">Loading...</span></div></div>');

            // Load messages
            loadGroupMessages(roomName, 0, false, roomId, isroom, roomId);

            // Mark as read
            if (isroom === true) {
                connectionChat.invoke("MarkMessagesAsRead", roomId)
                    .then(() => $(`#unread-count-${roomId}`).hide())
                    .catch(() => { });
            } else {
                connectionChat.invoke("P_To_P_MarkMessagesAsRead", roomId)
                    .then(() => $(`#unread-count-${roomId}`).hide())
                    .catch(() => { });
            }
        });
    });

    // ==========================
    // ✅ FONT SIZE DROPDOWN
    // ==========================
    $("#fontSizeDropdown").on("change", function () {
        fontSize = parseInt($(this).val());
        customFontSize(fontSize);
    });

    function customFontSize(size) {
        $(".message-text").css("font-size", size + "px");

        if (size >= 22) {
            $(".message-text").css("line-height", size + 15 + "px");
        } else {
            $(".message-text").css("line-height", size + 8 + "px");
        }
    }

    // ==========================
    // ✅ LOAD GROUP/PERSONAL MESSAGES (AJAX)
    // ==========================
    function loadGroupMessages(roomName, skipDaysParam = 0, prepend = false, roomId = 0, isroom = false, receiverid = "") {

        isLoading = true;

        var unreadCount = parseInt($(`#unread-count-${roomId}`).html() || "0");

        $.ajax({
            url: `/Home/GetMessagesByRoom`,
            type: 'GET',
            data: { roomName: roomName, skipRecords: skipDaysParam, isRoom: isroom, receiverId: receiverid },
            success: function (messages) {

                $("#chat-loader").remove();

                // ✅ if empty => stop further loading
                if (!messages || messages.length === 0) {
                    allMessagesLoaded = true;
                    isLoading = false;
                    return;
                }

                const chatList = $("#messagesList");
                let scrollPosBefore = $(".card-footer")[0].scrollHeight;

                messages.forEach(function (msg, index) {

                    // unread messages start index
                    const unreadStartIndex = messages.length - unreadCount;
                    console.log("unreadStartIndex :"+ unreadStartIndex)
                    // Marker should be inserted just before first unread message
                    if (unreadCount > 0 && index == unreadStartIndex) {
                        const markerHtml = `<div id="unread-marker" class="text-center text-muted my-2" style="font-size: large;font-family: emoji;">
                                                <hr><small><h3>New Messages</h3></small><hr>
                                            </div>`;
                       chatList.append(markerHtml);
                    }

                    const messageHtml = renderMessage(msg.sender, msg.message, msg.id, true, false, false, msg.messageTime);

                    if (prepend)
                    {
                        chatList.prepend(messageHtml);
                    }
                    else
                    {
                        chatList.append(messageHtml);
                    }
                });


                let scrollDiff = $(".card-footer")[0].scrollHeight - scrollPosBefore;
                $(".card-footer").scrollTop(scrollDiff);

                isLoading = false;
            },
            error: function (error) {
                console.error("Error loading messages:", error);
                isLoading = false;
                $("#chat-loader").remove();
            }
        });
    }

    // ==========================
    // ✅ RENDER MESSAGE
    // ==========================
    function renderMessage(user, message, messageId, returnOnly = false, isEdited = false, isDeleted = false, messagetime) {

        var senderEmail = getSenderEmail();
        var isOwnMessage = user === senderEmail;

        let timeStr = messagetime;
        var userName = capitalizeFirstLetter(user);

        var userInfo = $("<div>")
            .addClass("d-flex ms-2")
            .css({
                "min-width": "120px",
                "position": "relative",
                "display": "flex",
                "flex-direction": "column",
                "text-align": "right",
                "align-items": "flex-end"
            })
            .append(
                $("<span>").addClass("fw-semibold UserIcon").text(userName[0]),
                $("<span>").addClass("fw-semibold UserName").text(userName),
                $("<small>").addClass("text-muted").text(userName),
                $("<small>").addClass("text-muted").text(timeStr)
            );

        let messageText = (message || "").replace(/\\n/g, "<br>");
        if (isEdited && !isDeleted) messageText += " <i>(edited)</i>";

        var bubble = $("<div>")
            .addClass("msg-custom rounded px-3 py-2 position-relative")
            .addClass(isOwnMessage ? "text-white msg" : "text-dark msg")
            .css({
                "max-width": "85%",
                "min-width": "40%",
                "background-color": isOwnMessage ? "#f5f5f5" : "#303d4f"
            })
            .attr("id", `message-${messageId}`)
            .append($("<div>").addClass("message-text content").html(messageText));

        if (messageText === "Message deleted") {
            bubble.css({
                "opacity": ".7",
                "cursor": "not-allowed",
                "font-style": "italic"
            });
        } else {
            bubble.append(
                $("<button>")
                    .addClass("btn btn-sm btn-light copy-btn position-absolute top-0 end-0 m-1")
                    .html('<i class="fa-solid fa-copy" aria-hidden="true"></i>')
            );
        }

        if (isOwnMessage && messageText !== "Message deleted") {
            bubble.append(
                $("<div>").addClass("mt-2 d-flex gap-2 justify-content-end")
                    .append(
                        $("<button>")
                            .addClass("btn btn-sm btn-outline-secondary edit-btn")
                            .html('<i class="fa-solid fa-pen-to-square"></i>')
                            .attr("data-id", messageId)
                            .attr("data-content", message),
                        $("<button>")
                            .addClass("btn btn-sm btn-outline-danger delete-btn")
                            .html('<i class="fa-solid fa-trash"></i>')
                            .attr("data-id", messageId)
                    )
            );
        }

        var contentWrapper = $("<div>")
            .addClass("d-flex customClassContent")
            .addClass(isOwnMessage ? "flex-row-reverse text-end" : "flex-row")
            .append(bubble)
            .append(userInfo);

        var li = $("<li>")
            .addClass("list-group-item border-0 d-flex")
            .addClass(isOwnMessage ? "justify-content-end" : "justify-content-start")
            .append(contentWrapper);

        return returnOnly ? li : $("#messagesList").append(li);
    }

    // ==========================
    // ✅ EDIT MESSAGE
    // ==========================
    $(document).on("click", ".edit-btn", function () {
        var messageId = $(this).data("id");
        $("#editMessageId").val(messageId);

        var currentContent = $(this).attr("data-content");
        var editableText = currentContent.replace(/<br\s*\/?>/gi, "\n").replace(/\\n/g, "\n");
        $("#editMessageText").val(editableText);

        $("#editMessageModal").modal("show");
    });

    $("#saveEditMessage").on("click", function () {
        var messageId = $("#editMessageId").val();
        var newContent = $("#editMessageText").val();
        var $msg = $("#message-" + messageId);

        newContent = ($("#editMessageText").val().replace(/\n/g, "\\n"));
        var oldContent = $msg.find(".edit-btn").attr("data-content");

        if (newContent && newContent !== oldContent) {

            var isroom = $("#isGroup").val();
            var chatUserId = $("#hiddenRoomid").val();

            if (isroom == "true") {
                connectionChat.invoke("EditMessage", parseInt(messageId), newContent, currentRoom, "")
                    .catch(err => console.error("Edit failed:", err));
            } else {
                connectionChat.invoke("EditMessage", parseInt(messageId), newContent, currentRoom, chatUserId)
                    .catch(err => console.error("Edit failed:", err));
            }

            const formattedContent = newContent.replace(/\\n/g, "<br>");
            $msg.find(".message-text").html(formattedContent + ' <i>(edited)</i>');
            $msg.find(".edit-btn").attr("data-content", newContent);
        }

        $("#editMessageModal").modal("hide");
    });

    // ==========================
    // ✅ DELETE MESSAGE
    // ==========================
    $(document).on("click", ".delete-btn", function () {
        var messageId = $(this).data("id");
        var isroom = $("#isGroup").val();
        var chatUserId = $("#hiddenRoomid").val();

        if (confirm("Are you sure you want to delete this message?")) {

            if (isroom == "true") {
                connectionChat.invoke("DeleteMessage", parseInt(messageId), currentRoom, "")
                    .catch(err => console.error("Delete failed:", err));
            } else {
                connectionChat.invoke("DeleteMessage", parseInt(messageId), currentRoom, chatUserId)
                    .catch(err => console.error("Delete failed:", err));
            }
        }
    });

    function markMessageDeletedUI(messageId) {
        const $messageBubble = $("#message-" + messageId);

        if ($messageBubble.length) {
            $messageBubble.find(".fa-trash").remove();
            $messageBubble.find(".edit-btn").remove();
            $messageBubble.find(".copy-btn").remove();
            $messageBubble.find(".message-text").html('Message deleted');
            $messageBubble.css({
                "opacity": ".7",
                "cursor": "not-allowed",
                "font-style": "italic"
            });
        }
    }

    // ==========================
    // ✅ SEND MESSAGE
    // ==========================
    $("#sendMessage").on("click", function (event) {
        event.preventDefault();

        var sender = getSenderEmail();
        var message = $("#chatMessage").val();
        var room = getHiddenRoomName().trim();
        var chatId = getHiddenRoomId();
        var isroom = getIsGroup();

        if (!message || !room) return;

        message = ($("#chatMessage").val().replace(/\n/g, "\\n"));

        var $btn = $("#sendMessage");
        var originalText = $btn.html();
        $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...');

        let promise;
        if (isroom == "true") {
            promise = connectionChat.invoke("SendMessageToRoom", room, sender, message);
        } else {
            promise = connectionChat.invoke("SendMessageToUser", sender, chatId, message);
        }

        promise.then(() => {
            $("#chatMessage").val('');
        }).catch(err => {
            console.error("Send failed:", err);
        }).finally(() => {
            $btn.prop('disabled', false).html(originalText);
            setTimeout(() => customFontSize(fontSize), 300);
        });
    });

    // Enter key send + Ctrl+Enter newline
    $('#chatMessage').on('keydown', function (e) {
        if (e.which === 13) {
            if (e.ctrlKey) {
                var start = this.selectionStart;
                var end = this.selectionEnd;

                var text = $(this).val();
                $(this).val(text.substring(0, start) + '\n' + text.substring(end));

                this.selectionStart = this.selectionEnd = start + 1;
                return false;
            } else {
                e.preventDefault();
                $('#sendMessage').click();
            }
        }
    });

    // ==========================
    // ✅ HELPERS
    // ==========================
    function capitalizeFirstLetter(string) {
        if (string != null && string != "") {
            return string.charAt(0).toUpperCase() + string.slice(1);
        } else {
            return ".";
        }
    }

    // Move chat item to top
    function moveChatToTop(safeId, isRoom) {
        var groupList = $("#groupList");
        var chatItem = groupList.find(`li.group-item[data-id='${safeId}']`);

        if (chatItem.length) {
            chatItem.detach();

            if (isRoom) {
                var groupHeader = groupList.find("li.list-separator:contains('Groups')");
                if (groupHeader.length) chatItem.insertAfter(groupHeader);
                else groupList.prepend(chatItem);
            } else {
                var userHeader = groupList.find("li.list-separator:contains('Users')");
                if (userHeader.length) {
                    var firstUser = userHeader.nextAll(".group-item[data-isroom='false']").last();
                    if (firstUser.length) chatItem.insertAfter(firstUser);
                    else chatItem.insertAfter(userHeader);
                } else {
                    groupList.prepend(chatItem);
                }
            }

            chatItem.css({
                "background-color": "#3e0a18",
                "transition": "background-color 0.5s"
            });

            setTimeout(() => {
                chatItem.css("background-color", "");
            }, 800);
        }
    }

    function sortChatListByUnread() {
        const groupList = $("#groupList");
        const groups = [];
        const users = [];

        let currentSection = null;

        groupList.children("li").each(function () {
            const li = $(this);

            if (li.hasClass("list-separator")) {
                currentSection = li.text().trim();
                return;
            }

            const badge = li.find(".badge");
            const count = badge && badge.text() ? parseInt(badge.text()) : 0;

            const item = { element: li.detach(), count: count };

            if (currentSection === "Groups") groups.push(item);
            else if (currentSection === "Users") users.push(item);
        });

        groups.sort((a, b) => b.count - a.count);
        users.sort((a, b) => b.count - a.count);

        const groupHeader = groupList.find("li.list-separator:contains('Groups')");
        const userHeader = groupList.find("li.list-separator:contains('Users')");

        if (groupHeader.length) {
            $.each(groups, function (index, item) {
                groupHeader.after(item.element);
            });
        }

        if (userHeader.length) {
            $.each(users, function (index, item) {
                userHeader.after(item.element);
            });
        }
    }
</script>
